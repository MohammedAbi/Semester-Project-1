.logo {
  width: 3.125rem;
  height: 2.581rem;
  cursor: pointer;
  list-style: none;
  margin-left: 2rem;
}

header {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 1rem;
  background-color: var(--Dark-navy);
  z-index: 999;
}

nav {
  display: flex;
  align-items: center;
  flex-grow: 1;
  justify-content: space-between;
}

.nav-links,
li {
  list-style: none;
  margin: 0;
  padding: 0;
  display: flex;
  align-items: center;
}

.nav-links li {
  margin-right: 2rem;
  position: relative;
}

.nav-links a {
  text-decoration: none;
  color: white;
  display: inline-block;
  position: relative;
}

.nav-links .dropdown-content {
  display: none;
  position: absolute;
  background-color: var(--Dark-navy);
  min-width: 10rem;
  box-shadow: 0 .5rem 1rem rgba(0, 0, 0, 0.2);
  z-index: 1;
  top: 100%;
  left: 0;
}

.nav-links li:hover .dropdown-content {
  display: block;
}

.dropdown-content a {
  color: white;
  padding: .75rem 1rem;
  text-decoration: none;
  display: block;
}

.dropdown-content a:hover {
  font-weight: bold;
  transition: font-weight 0.3s ease;
}

.right-links {
  display: flex;
  align-items: center;
}

.nav-links a,
.right-links a {
  text-decoration: none;
  color: white;
}

.nav-links a:hover,
.right-links a:hover {
  font-weight: bold;
  transition: font-weight 0.3s ease;
}

main {
  display: flex;
  align-items: center;
  justify-content: center;
  display: block;
}

.home {
  height: 37.8125rem;
  padding: 9.375rem 9.375rem 2rem 9.375rem;
  padding-bottom: 3.75rem;
}

.home h1 {
  padding-bottom: 3.75rem;
}

.home p {
  text-align: center;
  font-size: 1.5rem;
}

#image-slider-container {
  padding: 2rem;
}

.slider-wrapper {
  position: relative;
  max-width: 70rem;
  margin: 0 auto;
}

.slider {
  display: flex;
  aspect-ratio: 16 / 9;
  overflow-x: auto;
  scroll-snap-type: x mandatory;
  scroll-behavior: smooth;
  box-shadow: 0 1.5rem 3rem -0.75rem hsla(0, 0%, 0%, 0.25);
  border-radius: 0.5rem;
}

.slider img {
  flex: 1 0 100%;
  scroll-snap-align: start;
  object-fit: cover;
}

.slide-nav {
  display: flex;
  column-gap: 1rem;
  position: absolute;
  bottom: 1.25rem;
  left: 50%;
  transform: translateX(-50%);
  background-color: white;
  padding: 1rem;
  border-radius: 0.2rem;
  z-index: 1;
}

.slide-nav a {
  width: 0.5rem;
  height: 0.5rem;
  border-radius: 50%;
  background-color: var(--Dark-navy);
  opacity: 0.75;
  transition: opacity ease 250ms;
}

.slide-nav a:hover {
  opacity: 1;
}

.menu-icon {
  font-size: 1.5rem;
  color: white;
  cursor: pointer;
  display: none;
}

.menu-icon:hover {
  opacity: 0.8;
}

.nav-links {
  display: flex;
  list-style: none;
}

.nav-links li {
  margin-right: 1rem;
}

.nav-links a {
  text-decoration: none;
  color: white;
  padding: 0.5rem;
}

.nav-links a:hover {
  font-weight: bold;
}


.dropdown {
  position: relative;
}

.dropdown-content {
  display: none;
  position: absolute;
  background-color: var(--Dark-navy);
  box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
  z-index: 1;
}

.dropdown:hover .dropdown-content {
  display: block;
}

@media only screen and (max-width: 768px) {
  .menu-icon {
    display: block;
  }

  .nav-links {
    display: none;
    flex-direction: column;
    width: 100%;
    position: absolute;
    top: 60px;
    left: 0;
    background-color: var(--Dark-navy);
  }

  .nav-links.show {
    display: flex;
  }

  .nav-links li {
    text-align: center;
    margin: 0;
  }

  .nav-links a {
    padding: 1rem;
    display: block;
    border-bottom: 1px solid white;
  }

  .menu-toggle:checked + .nav-links {
    display: flex;
  }
}